<%= div_for answer do %>
<div id="vote-cell">
	<div class="vote">
		<%= up_voted(answer, current_user.id) %>
		<span class="vote-count-post" id="answer_<%= answer.id %>_vote"><%= answer.votes_count %></span>
		<%= down_voted(answer, current_user.id) %>
	</div>
</div>
<div id="post-cell">
	<div class="post">
		<%= answer.content %>
		<div class="post-menu">
			<a>link</a>
			<span class="lsep">|</span>
			<a>edit</a>
			<span class="lsep">|</span>
			<a>flag</a>
		</div>
		<%= render '/partials/user_bar', :obj => answer %>
		<%= render '/partials/comment', :obj => answer %>
	</div>
</div>
<% end %>